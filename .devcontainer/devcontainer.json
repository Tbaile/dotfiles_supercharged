{
	"name": "Ansible DEV",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.ansible",
				"GitHub.copilot",
				"eamodio.gitlens",
				"wholroyd.jinja"
			],
			"settings": {
				"files.associations": {
					"**/group_vars/**/*.yml": "ansible",
					"**/roles/**/*.yml": "ansible",
					"main.yml": "ansible"
				}
			}
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
