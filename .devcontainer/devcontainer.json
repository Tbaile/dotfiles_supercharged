{
	"name": "Fedora DEV",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"eamodio.gitlens",
				"redhat.ansible",
				"wholroyd.jinja",
				"GitHub.copilot"
			],
			"settings": {
				"files.associations": {
					"**/host_vars/**.yml": "ansible",
					"**/roles/**/tasks/**.yml": "ansible",
					"**/roles/**/defaults/**.yml": "ansible",
					"**/roles/**/handlers/**.yml": "ansible"
				}
			}
		}
	}
}
