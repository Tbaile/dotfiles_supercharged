{
	"name": "Dotfiles",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"redhat.ansible",
				"wholroyd.jinja"
			],
			"settings": {
				"files.associations": {
					"**/host_vars/**.yml": "ansible",
					"**/roles/**/tasks/**.yml": "ansible",
					"**/roles/**/defaults/**.yml": "ansible",
					"**/roles/**/handlers/**.yml": "ansible"
				},
				"ansible.python.interpreterPath": "/home/dev/.conda/envs/dotfiles/bin/python"
			}
		}
	}
}
